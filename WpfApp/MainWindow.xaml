<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет заказов" Height="374" Width="849" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Canvas Margin="0,0,4,0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}">
        <DataGrid x:Name="dataGrid_Orders" Grid.Row="1" MouseUp="dataGrid_Orders_MouseUp" EnableRowVirtualization="True" AutoGenerateColumns="False" SelectionMode="Single" IsTextSearchEnabled="True" IsReadOnly="True" RowBackground="LightGray" AlternatingRowBackground="White" Padding="5,0" MinHeight="80"  Height="214" Canvas.Top="52" Width="456" Canvas.Left="19">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id_" Header="Id" Binding="{Binding orders_id}" Width="40"/>
                <DataGridTextColumn x:Name="name_" Header="ФИО клиента" Binding="{Binding name_client}" Width="120"/>
                <DataGridTextColumn x:Name="date1" Header="Дата" Binding="{Binding date}" Width="110"/>
                <DataGridTextColumn x:Name="dg1" Header="Общая сумма заказа" Binding="{Binding totalSumOrder}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dataGrid_List_of_order_items" Grid.Row="1" EnableRowVirtualization="True" AutoGenerateColumns="False" SelectionMode="Single" IsTextSearchEnabled="True" IsReadOnly="True" RowBackground="LightGray" AlternatingRowBackground="White" Padding="5,0" MinHeight="80"  Height="214" Canvas.Top="52"  Canvas.Left="501" Width="314" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding product_id}" Width="40"/>
                <DataGridTextColumn Header="Название товара" Binding="{Binding product_name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Заказы" Canvas.Left="19" Canvas.Top="21"/>
        <Label Content="Список позиций заказа" Canvas.Left="501" Canvas.Top="21"/>


    </Canvas>
</Window>
